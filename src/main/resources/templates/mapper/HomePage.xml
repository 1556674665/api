<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="api.dao.HomePage">
    <resultMap id="img" type="api.pojo.Picture_Table">
        <result column="id" property="id"/>
        <result column="picture" property="picture"/>
        <result column="Creation_time" property="Creation_time"/>
        <result column="Modification_time" property="Modification_time"/>
        <result column="Type" property="Type"/>
        <result column="Foreign_id" property="Foreign_id"/>
    </resultMap>
    <select id="RotationImg" resultMap="img">
        select * from Picture_table where Type =1
    </select>
</mapper>